	"scripts": {
		"dev": "NODE_ENV=development rspack serve",
		"build": "pnpm clean && NODE_ENV=production pnpm generate:tcm && pnpm build:client:rspack && pnpm build:server:rspack && pnpm invoke:ssg && pnpm copy:assets",
		"__webpack": "NODE_OPTIONS=\"--loader ts-node/esm\" webpack",
		"build:client:webpack": "NODE_ENV=production pnpm __webpack --config webpack.config.client.ts",
		"build:server:webpack": "NODE_ENV=production pnpm __webpack build --config webpack.config.server.ts",
		"invoke:ssg": "node ./dist/build.js",
		"__rspack": "NODE_OPTIONS=\"--loader ts-node/esm\" rspack",
		"build:client:rspack": "NODE_ENV=production pnpm __rspack build --config rspack.config.client.ts",
		"build:server:rspack": "NODE_ENV=production pnpm __rspack build --config rspack.config.server.ts",
		"copy:assets": "cp -r ./src/assets/* ./public/assets/",
		"test": "vitest run",
		"generate:tcm": "tcm src",
		"components-catalogue:serve": "ladle serve",
		"clean": "rimraf public"
	},
