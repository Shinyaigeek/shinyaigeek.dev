    "main": "index.js",
    "scripts": {
        "__webpack": "NODE_OPTIONS=\"--loader ts-node/esm\" webpack",
        "build": "pnpm clear && NODE_ENV=production pnpm build:css && pnpm rss && pnpm sitemap && pnpm mv:assets && pnpm generate-og-image",
        "build:css": "pnpm __webpack --config webpack.config.client.ts --mode=production",
        "build:dev": "export NODE_ENV=development && pnpm build:css && pnpm build:ssg && pnpm rss && pnpm sitemap && pnpm mv:assets",
        "build:server": "pnpm __webpack --config webpack.config.server.ts",
        "build:ssg": "pnpm build:server && node ssg.js",
        "clear": "rimraf ./public",
        "dev": "nodemon --watch src/ --exec  pnpm build",
        "generate-og-image": "ts-node --esm ./src/generateOGImage/generateOGImage.ts",
        "i18n:compile": "lingui compile --typescript",
        "i18n:extract": "lingui extract",
        "mv:assets": "ts-node --esm ./scripts/copyAssetsIntoPublic.ts",
        "purge": "ts-node --esm ./scripts/purgeCache.ts",
        "rss": "ts-node --esm ./scripts/buildRss.ts",
        "serve": "miniserve ./public --index index.html",
        "sitemap": "ts-node --esm ./scripts/buildSitemap.ts"
    },
    "dependencies": {
