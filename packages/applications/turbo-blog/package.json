	},
	"devDependencies": {
		"@rspack/cli": "0.5.6",
		"@rspack/core": "0.5.6",
		"@rspack/plugin-react-refresh": "0.5.6",
		"@swc/core": "^1.3.100",
		"@types/html-minifier": "^4.0.0",
		"@types/react": "^18.3.1",
