	"main": "index.js",
	"scripts": {
		"dev": "NODE_ENV=development rspack serve",
		"build": "NODE_ENV=production pnpm build:client && pnpm build:server && pnpm invoke:ssg",
		"__webpack": "NODE_OPTIONS=\"--loader ts-node/esm\" webpack",
		"build:client": "NODE_ENV=production pnpm __webpack --config webpack.config.client.ts",
		"build:server": "NODE_ENV=production pnpm __webpack build --config webpack.config.server.ts",
		"start:jsx-renderer": "node --conditions react-server ./dist/main.js",
		"invoke:ssg": "node --conditions react-server ./dist/main.js",
		"__rspack": "NODE_OPTIONS=\"--loader ts-node/esm\" rspack",
		"build:client:rspack": "NODE_ENV=production pnpm __rspack build --config rspack.config.client.ts",
		"build:server:rspack": "NODE_ENV=production pnpm __rspack build --config rspack.config.server.ts"
	},
	"dependencies": {
		"@hono/node-server": "^1.11.1",
		"@lingui/core": "^4.0.0",
		"hono": "^4.2.8",
		"html-minifier": "^4.0.0",
		"option-t": "^39.0.3",
