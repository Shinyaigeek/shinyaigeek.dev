		"build-tool": "workspace:*",
		"css-loader": "^6.3.0",
		"react-refresh": "^0.14.0",
		"react-server-dom-webpack": "19.0.0-beta-94eed63c49-20240425",
		"sass-loader": "^14.2.1",
		"swc-loader": "^0.2.3",
		"ts-node": "^10.2.1",
		"webpack": "^5.38.1",
		"webpack-merge": "^5.8.0"
	}
}
